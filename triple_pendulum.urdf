<robot name="triple_pendulum">

    <material name="black">
        <color rgba="0 0 0 1"/>
    </material>
    <material name="white">
        <color rgba="1 1 1 1"/>
    </material>
    <material name="gray">
        <color rgba="0.4 0.4 0.4 1"/>
    </material>

    <!-- Base and world links -->
    <link name="world"/>
    <link name="base">
        <visual>
            <geometry>
                <sphere radius="0.1"/>   
            </geometry>
            <material name="white"/>
        </visual>
        <inertial>
            <mass value="0"/>
            <inertia ixx="0" ixy="0" ixz="0" iyy="0" iyz="0" izz="0"/>
        </inertial>
    </link>

    <!-- First pendulum segment -->
    <link name="link_1">
        <visual>
            <geometry>
                <cylinder radius="0.01" length="0.8"/>   
            </geometry>
            <origin xyz="0.0 0 0.4" rpy="0 0 0"/>
            <material name="gray"/>
        </visual>
        <inertial>
            <mass value="0"/>
            <inertia ixx="0" ixy="0" ixz="0" iyy="0" iyz="0" izz="0"/>
        </inertial>
    </link>

    <!-- Second pendulum segment -->
    <link name="link_2">
        <visual>
            <geometry>
                <cylinder radius="0.01" length="0.8"/>   
            </geometry>
            <origin xyz="0.0 0 0.4" rpy="0 0 0"/>
            <material name="gray"/>
        </visual>
        <inertial>
            <mass value="0"/>
            <inertia ixx="0" ixy="0" ixz="0" iyy="0" iyz="0" izz="0"/>
        </inertial>
    </link>

    <!-- Third pendulum segment -->
    <link name="link_3">
        <visual>
            <geometry>
                <cylinder radius="0.01" length="0.8"/>   
            </geometry>
            <origin xyz="0.0 0 0.4" rpy="0 0 0"/>
            <material name="gray"/>
        </visual>
        <inertial>
            <mass value="0"/>
            <inertia ixx="0" ixy="0" ixz="0" iyy="0" iyz="0" izz="0"/>
        </inertial>
    </link>

    <!-- End effectors with mass -->
    <link name="link_eef_1">
        <visual>
            <geometry>
                <sphere radius="0.05"/>   
            </geometry>
            <origin xyz="0 0 0.05" rpy="0 0 0"/>
            <material name="black"/>
        </visual>
        <inertial>
            <mass value="1"/>
            <inertia ixx="0" ixy="0" ixz="0" iyy="0" iyz="0" izz="0"/>
        </inertial>
    </link>

    <link name="link_eef_2">
        <visual>
            <geometry>
                <sphere radius="0.05"/>   
            </geometry>
            <origin xyz="0 0 0.05" rpy="0 0 0"/>
            <material name="black"/>
        </visual>
        <inertial>
            <mass value="1"/>
            <inertia ixx="0" ixy="0" ixz="0" iyy="0" iyz="0" izz="0"/>
        </inertial>
    </link>

    <link name="link_eef_3">
        <visual>
            <geometry>
                <sphere radius="0.05"/>   
            </geometry>
            <origin xyz="0 0 0.05" rpy="0 0 0"/>
            <material name="black"/>
        </visual>
        <inertial>
            <mass value="1"/>
            <inertia ixx="0" ixy="0" ixz="0" iyy="0" iyz="0" izz="0"/>
        </inertial>
    </link>

    <!-- Joints -->
    <joint name="world_to_base" type="fixed">
        <parent link="world"/>
        <child link="base"/>
        <origin xyz="0 0 3" rpy="0 0 0"/>
    </joint>

    <!-- First revolute joint -->
    <joint name="joint_1" type="revolute">
        <parent link="base"/>
        <child link="link_1"/>
        <origin xyz="0 0 0" rpy="0 3.141592653589793 0"/>
        <axis xyz="0 1 0"/>
        <limit effort="0" velocity="0"/>
        <dynamics damping="1" friction="0"/>
    </joint>

    <!-- EEF connections -->
    <joint name="eef_joint_1" type="fixed">
        <parent link="link_1"/>
        <child link="link_eef_1"/>
        <origin xyz="0 0 0.8"/>
    </joint>

    <!-- Second revolute joint -->
    <joint name="joint_2" type="revolute">
        <parent link="link_eef_1"/>
        <child link="link_2"/>
        <origin xyz="0 0 0" rpy="0 3.141592653589793 0"/>
        <axis xyz="0 -1 0"/>
        <limit effort="0" velocity="0"/>
        <dynamics damping="1" friction="0"/>
    </joint>

    <joint name="eef_joint_2" type="fixed">
        <parent link="link_2"/>
        <child link="link_eef_2"/>
        <origin xyz="0 0 0.8"/>
    </joint>

    <!-- Third revolute joint -->
    <joint name="joint_3" type="revolute">
        <parent link="link_eef_2"/>
        <child link="link_3"/>
        <origin xyz="0 0 0" rpy="0 3.141592653589793 0"/>
        <axis xyz="0 -1 0"/>
        <limit effort="0" velocity="0"/>
        <dynamics damping="1" friction="0"/>
    </joint>

    <joint name="eef_joint_3" type="fixed">
        <parent link="link_3"/>
        <child link="link_eef_3"/>
        <origin xyz="0 0 0.8"/>
    </joint>

</robot>